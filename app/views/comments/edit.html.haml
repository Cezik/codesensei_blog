= simple_form_for @comment, url: article_comment_path(@article.id), :method => :PATCH, wrapper: :horizontal_form do |f|
  = f.input :commenter
  = f.input :body
  .form-group.row.mb-0
    .col-sm-9.offset-sm-3
      = f.button :submit, class: 'btn-success'
= link_to t('articles.show.index_link'), article_path(@article.id), class: 'btn btn-info'
